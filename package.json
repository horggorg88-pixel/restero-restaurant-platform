{
  "name": "restero-restaurant-platform",
  "version": "1.0.0",
  "description": "Полноценная система управления ресторанами с бронированиями",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:platform\" \"npm run dev:admin\"",
    "dev:full": "concurrently \"npm run dev:api\" \"npm run dev:platform\" \"npm run dev:admin\"",
    "dev:api": "cd api && php artisan serve --host=0.0.0.0 --port=8000",
    "dev:platform": "cd platform && npm run dev",
    "dev:admin": "cd admin/gills-moscow-front && npm run dev",
    "build": "npm run build:platform && npm run build:admin",
    "build:platform": "cd platform && npm run build",
    "build:admin": "cd admin/gills-moscow-front && npm run build",
    "start": "npm run start:platform",
    "start:platform": "cd platform && npm run start",
    "install:all": "npm install && cd platform && npm install && cd ../admin/gills-moscow-front && npm install",
    "setup": "npm run install:all",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "railway:login": "railway login",
    "railway:init": "railway init",
    "railway:deploy": "railway up",
    "railway:logs": "railway logs",
    "railway:status": "railway status",
    "clean": "npm run clean:platform && npm run clean:admin",
    "clean:platform": "cd platform && rmdir /s /q node_modules 2>nul & rmdir /s /q .next 2>nul",
    "clean:admin": "cd admin/gills-moscow-front && rmdir /s /q node_modules 2>nul & rmdir /s /q dist 2>nul"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "restaurant",
    "booking",
    "management",
    "nextjs",
    "react",
    "laravel",
    "api"
  ],
  "author": "Restero Team",
  "license": "MIT"
}
